<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".search_activity.OtherUserActivity">

    <include layout="@layout/snippet_top_backbutton"/>

    <ImageView
        android:id="@+id/ivOtherUserProfilePhoto"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:adjustViewBounds="true"
        android:clickable="false" />

    <TextView
        android:id="@+id/tvOtherUserScreenName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Screen Name"
        android:textSize="30dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/tvOtherUserUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/tvOtherUserBio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The bio goes here."
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNumberOfFriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:text="0"
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/tvFriendsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_toEndOf="@id/tvNumberOfFriends"
            android:text="Friends"
            android:textSize="25dp"/>

        <TextView
            android:id="@+id/tvNumberOfMutualFriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_toEndOf="@id/tvFriendsLabel"
            android:text="0"
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/tvMutualFriendsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/tvNumberOfMutualFriends"
            android:text="Mutual Friends"
            android:textSize="22dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnAddFriend"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:background="@color/colorPrimary"
        android:text="add friend"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnDeclineFriend"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:background="@color/colorPrimary"
        android:text="decline friend request"
        android:textSize="20dp" />




    </LinearLayout>
