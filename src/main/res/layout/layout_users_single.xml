<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivOtherUserThumbnail"
        android:layout_width="60dp"
        android:layout_height="60dp"
            android:layout_margin="5dp"
            app:civ_border_color="#000000"
            app:civ_border_width=".5dp"
            android:src="@drawable/ic_user_grey"/>

        <TextView
            android:id="@+id/tvOtherUserScreenName"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_toEndOf="@+id/ivOtherUserThumbnail"
            android:text="Another User's screen name "
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/tvOtherUserBio"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_below="@id/tvOtherUserScreenName"
            android:layout_toEndOf="@id/ivOtherUserThumbnail"
            android:text="another user's bio..."
            android:textSize="15dp"/>

</RelativeLayout>